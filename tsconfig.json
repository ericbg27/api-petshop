{
    "compilerOptions": {
        "target": "es2017",
        "outDir": "./dist",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "allowJs": true,
        "removeComments": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
    },
    "include": ["src/**/*.ts"]
}